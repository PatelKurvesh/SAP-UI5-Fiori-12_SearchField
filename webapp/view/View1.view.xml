<mvc:View controllerName="GithubSAP-UI5-Fiori-12_SearchField.controller.View1" xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m">
	<App>
		<pages>
			<Page title="{i18n>title}">
				<content>
					<SearchField search="onSearchItem"></SearchField>
					<!--items is a binding parameter bcz we use aggregation binding-->
					<List id="fruits" items="{/fruits}">  
						<ObjectListItem
						title="{name}"
						number="{price}">
							<ObjectAttribute text="{taste}"></ObjectAttribute>
							<ObjectAttribute text="{color}"></ObjectAttribute>
							
						</ObjectListItem>
					</List>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>